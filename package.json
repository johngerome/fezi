{
  "name": "@johngerome/zimfetch",
  "version": "0.1.1",
  "description": "A lightweight fetch wrapper for browser and Node.js",
  "author": "",
  "license": "MIT",
  "keywords": [
    "fetch",
    "http",
    "request",
    "typescript"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"examples/**/*.{ts,tsx}\"",
    "lint": "prettier --check \"src/**/*.{ts,tsx}\" \"examples/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc -p tsconfig.test.json",
    "typecheck:all": "pnpm typecheck && pnpm typecheck:test",
    "typecheck:watch": "tsc --noEmit --watch",
    "prepublishOnly": "pnpm run typecheck:all && pnpm run build",
    "release": "bumpp && pnpm publish",
    "changelog": "npx changelogithub"
  },
  "packageManager": "pnpm@10.8.1",
  "devDependencies": {
    "@types/node": "^22.15.17",
    "@vitest/coverage-v8": "3.1.3",
    "bumpp": "^9.4.0",
    "changelogithub": "^0.13.3",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "vitest": "^3.1.3"
  },
  "peerDependencies": {
    "typescript": "*",
    "zod": "*"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  }
}
