{
  "name": "fezi",
  "version": "0.1.2",
  "private": true,
  "description": "A lightweight fetch wrapper for browser and Node.js",
  "author": "",
  "license": "MIT",
  "keywords": [
    "fetch",
    "http",
    "request",
    "typescript"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=\"./packages/*\"",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "format": "prettier --write \"packages/**/*.{ts,tsx}\" \"examples/**/*.{ts,tsx}\"",
    "lint": "prettier --check \"packages/**/*.{ts,tsx}\" \"examples/**/*.{ts,tsx}\"",
    "typecheck": "turbo run typecheck",
    "typecheck:all": "turbo run typecheck",
    "typecheck:watch": "turbo run typecheck:watch",
    "clean": "turbo run clean && rm -rf node_modules",
    "packages:bump": "pnpm dlx bumpp -r",
    "packages:publish": "pnpm run build:packages && pnpm --filter='./packages/*' publish -r --access=public",
    "packages:publish:commit": "pnpm run build:packages && pnpm dlx pkg-pr-new publish './packages/*' --pnpm --compact --template './playgrounds/*'",
    "packages:changelog:github": "pnpm dlx changelogithub --draft"
  },
  "packageManager": "pnpm@10.8.1",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^22.15.17",
    "prettier": "^3.5.3",
    "turbo": "^1.10.16",
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
